<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Rating</th>
      <th>Content</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.rating %></td>
        <td><%= review.content %></td>
        <td><%= review.restaurant.name %></td>
       </tr>
    <% end %>
  </tbody>
</table>

<hr>
<%= link_to 'Leave review', new_restaurant_review_path %>
<br>
<%= link_to 'Back', restaurants_path %>
